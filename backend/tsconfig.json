{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022", // Updated to a more modern ECMAScript version
    "lib": ["es2022", "dom"], // Add necessary libraries (e.g., DOM for browser-like environments)

    /* Modules */
    "module": "commonjs", // CommonJS for Node.js compatibility
    "rootDir": "./", // Specify the root directory for your source files
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "moduleResolution": "node", // Use Node.js-style module resolution

    /* Interop Constraints */
    "esModuleInterop": true, // Enable easier CommonJS/ES module interop
    "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing

    /* Type Checking */
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking for .d.ts files

    /* Emit */
    "sourceMap": true, // Generate source maps for debugging
    "inlineSources": true, // Include source code in source maps
    "removeComments": false, // Keep comments in the emitted code

    /* JavaScript Support */
    "allowJs": true, // Allow JavaScript files to be included in the project
    "checkJs": true // Enable type-checking for JavaScript files
  },
  "include": ["src", "prisma"], // Include these directories in the TypeScript project
  "exclude": ["node_modules", "dist"] // Exclude these directories from the TypeScript project
}