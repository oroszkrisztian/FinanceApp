generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Currency {
  id    Int     @id @default(autoincrement())
  name  String
  bills Bill[]
  funds Fund[]
}

model Bill {
  id                Int      @id @default(autoincrement())
  name             String
  date             DateTime
  cost             Decimal  @db.Decimal(15, 2)
  currencyId       Int
  userId           Int
  emailNotification Boolean  @default(false)
  automaticPayment Boolean  @default(false)
  currency         Currency @relation(fields: [currencyId], references: [id])
  user             User     @relation(fields: [userId], references: [id])

  @@index([currencyId], map: "Bill_currencyId_fkey")
  @@index([userId], map: "Bill_userId_fkey")
}

model Fund {
  id         Int      @id @default(autoincrement())
  name       String   
  amount     Decimal  @db.Decimal(15, 2)
  currencyId Int
  userId     Int
  currency   Currency @relation(fields: [currencyId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@index([currencyId], map: "Fund_currencyId_fkey")
  @@index([userId], map: "Fund_userId_fkey")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  bills     Bill[]
  funds     Fund[]
}