generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Service {
  id           Int           @id @default(autoincrement())
  name         String
  transactions Transaction[]
}

model TransactionType {
  id           Int           @id @default(autoincrement())
  name         String
  in_or_out    Boolean
  transactions Transaction[]
}

model Currency {
  id       Int       @id @default(autoincrement())
  name     String
  accounts Account[]
}

model Transaction {
  id                 Int             @id @default(autoincrement())
  recipientAccountId Int
  senderAccountId    Int
  typeId             Int
  amount             Decimal         @db.Decimal(15, 2)
  createdAt          DateTime        @default(now())
  description        String?
  serviceId          Int?
  recipientAccount   Account         @relation("ReceivedTransactions", fields: [recipientAccountId], references: [id])
  senderAccount      Account         @relation("SentTransactions", fields: [senderAccountId], references: [id])
  service            Service?        @relation(fields: [serviceId], references: [id])
  type               TransactionType @relation(fields: [typeId], references: [id])

  @@index([recipientAccountId], map: "Transaction_recipientAccountId_fkey")
  @@index([senderAccountId], map: "Transaction_senderAccountId_fkey")
  @@index([serviceId], map: "Transaction_serviceId_fkey")
  @@index([typeId], map: "Transaction_typeId_fkey")
}

model Account {
  id                   Int           @id @default(autoincrement())
  ownerId              Int
  currencyId           Int
  name                 String
  currency             Currency      @relation(fields: [currencyId], references: [id])
  owner                User          @relation(fields: [ownerId], references: [id])
  receivedTransactions Transaction[] @relation("ReceivedTransactions")
  sentTransactions     Transaction[] @relation("SentTransactions")

  @@index([currencyId], map: "Account_currencyId_fkey")
  @@index([ownerId], map: "Account_ownerId_fkey")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  username  String    @unique
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  accounts  Account[]
}
